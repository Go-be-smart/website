---
import LanguageSwitcher from './LanguageSwitcher.astro';
import EmailFormModal from './EmailFormModal.astro';
import { getLocaleFromUrl, getTranslation } from '../utils/i18n';

const { url } = Astro.props;
const currentLocale = getLocaleFromUrl(url);
const t = getTranslation(currentLocale);
---

<!-- Navigation -->
<nav class="fixed top-0 left-0 right-0 bg-[var(--color-bg-primary)]/95 backdrop-blur-sm border-b border-[var(--color-primary-dark)]/20 z-50">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="flex justify-between items-center py-4">
			<div class="flex items-center">
				<img src="gbs_stamp_dark_no_bg.png" alt="Go be smart stamp" class="h-10" />
			</div>
			<div class="hidden md:flex space-x-8 items-center">
				<a href="#about" class="text-[var(--color-text-secondary)] hover:text-[var(--color-primary-dark)] transition-colors">{t('nav.about')}</a>
				<a href="#team" class="text-[var(--color-text-secondary)] hover:text-[var(--color-primary-dark)] transition-colors">{t('nav.team')}</a>
				<a href="#contact" class="text-[var(--color-text-secondary)] hover:text-[var(--color-primary-dark)] transition-colors">{t('nav.contact')}</a>
			</div>
			<LanguageSwitcher />
		</div>
	</div>
</nav>

<!-- Hero Section -->
<section class="pt-20 pb-0 bg-[var(--color-bg-secondary)] border-b border-[var(--color-primary-dark)]/30">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="text-center py-20">
			<h1 class="text-5xl md:text-6xl font-bold text-[var(--color-text-primary)] mb-6">
				{t('hero.title')}
				<span class="bg-gradient-to-r from-[var(--color-gradient-start)] to-[var(--color-gradient-end)] bg-clip-text text-transparent">
					{t('hero.titleHighlight')}
				</span>
			</h1>
			<p class="text-xl text-[var(--color-text-secondary)] mb-8 max-w-3xl mx-auto">
				{t('hero.description')}
			</p>
			<div class="flex flex-col sm:flex-row gap-4 justify-center">
				<button 
					onclick="window.openEmailModal?.()"
					class="bg-gradient-to-r from-[var(--color-gradient-start)] to-[var(--color-gradient-end)] text-[var(--color-text-primary)] px-8 py-4 rounded-lg text-lg font-semibold hover:shadow-xl hover:shadow-[var(--color-primary-dark)]/30 transition-all transform hover:scale-105"
				>
					{t('hero.learnMore')}
				</button>
			</div>
		</div>
	</div>
</section>

<!-- About Section -->
<section id="about" class="py-20 bg-gradient-to-b from-[var(--color-bg-secondary)] to-[var(--color-bg-primary)] border-b border-[var(--color-primary-dark)]/20">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="grid md:grid-cols-2 gap-12 items-center">
			<div>
				<h3 class="text-2xl font-bold text-[var(--color-primary)] mb-4"><span class="bg-gradient-to-r from-[var(--color-gradient-start)] to-[var(--color-gradient-end)] bg-clip-text text-transparent">
					{t('about.title')}
				</span></h3>
				<p class="text-[var(--color-text-secondary)] mb-6">
					{t('about.description')}
				</p>
				<div class="space-y-4">
					<div class="flex items-center">
						<div class="w-3 h-3 bg-gradient-to-r from-[var(--color-gradient-start)] to-[var(--color-gradient-end)] rounded-full mr-3"></div>
						<span class="text-[var(--color-text-secondary)]">{t('about.features.commissioning')}</span>
					</div>
					<div class="flex items-center">
						<div class="w-3 h-3 bg-gradient-to-r from-[var(--color-gradient-start)] to-[var(--color-gradient-end)] rounded-full mr-3"></div>
						<span class="text-[var(--color-text-secondary)]">{t('about.features.visits')}</span>
					</div>
					<div class="flex items-center">
						<div class="w-3 h-3 bg-gradient-to-r from-[var(--color-gradient-start)] to-[var(--color-gradient-end)] rounded-full mr-3"></div>
							<span class="text-[var(--color-text-secondary)]">{t('about.features.efficiency')}</span>
						</div>
				</div>
			</div>
			<div class="h-[270px] flex justify-center items-center">
				<img src="dashboard_no_border.png" alt="Dashboard Preview" class="h-full object-cover rounded-lg shadow-lg shadow-[var(--color-primary-dark)]">
			</div>
		</div>
	</div>
</section>


<!-- Team Section -->
<section id="team" class="py-20 bg-gradient-to-b from-[var(--color-bg-primary)] to-[var(--color-bg-secondary)] border-b border-[var(--color-primary-dark)]/30">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-12 lg:gap-16 items-start">
			<div class="text-center flex flex-col h-full">
				<img
					src="keje.jpeg"
					alt="Team member portrait: Keje"
					class="w-36 h-36 md:w-44 md:h-44 rounded-full object-cover mx-auto shadow-lg shadow-[var(--color-primary-dark)]/30 ring-2 ring-[var(--color-primary-dark)]/20"
					loading="lazy"
				/>
				<h3 class="mt-6 text-xl font-semibold text-[var(--color-text-primary)]">Keje Sinnige</h3>
				<p class="mt-2 text-[var(--color-text-secondary)] w-45 mx-auto text-center flex-grow">
					{t('team.descriptions.keje')}
				</p>
				<a
					href="https://www.linkedin.com/in/keje-sinnige/"
					target="_blank"
					rel="noopener noreferrer"
					class="flex items-center justify-center mt-4 w-8 h-8 mx-auto text-[var(--color-text-secondary)] hover:text-[var(--color-primary-dark)] transition-colors"
					aria-label="Keje Sinnige's LinkedIn profile"
				>
					<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
						<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
					</svg>
				</a>
			</div>

			<div class="text-center flex flex-col h-full">
				<img
					src="charlie.jpeg"
					alt="Team member portrait: Charlie"
					class="w-36 h-36 md:w-44 md:h-44 rounded-full object-cover mx-auto shadow-lg shadow-[var(--color-primary-dark)]/30 ring-2 ring-[var(--color-primary-dark)]/20"
					loading="lazy"
				/>
				<h3 class="mt-6 text-xl font-semibold text-[var(--color-text-primary)]">Charlie Zinken</h3>
				<p class="mt-2 text-[var(--color-text-secondary)] w-45 mx-auto text-center flex-grow">
					{t('team.descriptions.charlie')}
				</p>
				<a
					href="https://www.linkedin.com/in/charlie-zinken-04a3a286/"
					target="_blank"
					rel="noopener noreferrer"
					class="flex items-center justify-center mt-4 w-8 h-8 mx-auto text-[var(--color-text-secondary)] hover:text-[var(--color-primary-dark)] transition-colors"
					aria-label="Charlie Zinken's LinkedIn profile"
				>
					<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
						<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
					</svg>
				</a>
			</div>

			<div class="text-center flex flex-col h-full">
				<img
					src="age.jpeg"
					alt="Team member portrait: Age"
					class="w-36 h-36 md:w-44 md:h-44 rounded-full object-cover mx-auto shadow-lg shadow-[var(--color-primary-dark)]/30 ring-2 ring-[var(--color-primary-dark)]/20"
					loading="lazy"
				/>
				<h3 class="mt-6 text-xl font-semibold text-[var(--color-text-primary)]">Age Tjalma</h3>
				<p class="mt-2 text-[var(--color-text-secondary)] w-45 mx-auto text-center flex-grow">
					{t('team.descriptions.age')}
				</p>
				<a
					href="https://www.linkedin.com/in/agetjalma/"
					target="_blank"
					rel="noopener noreferrer"
					class="flex items-center justify-center mt-4 w-8 h-8 mx-auto text-[var(--color-text-secondary)] hover:text-[var(--color-primary-dark)] transition-colors"
					aria-label="Age Tjalma's LinkedIn profile"
				>
					<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
						<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
					</svg>
				</a>
			</div>
		</div>
	</div>
</section>


<!-- Contact Section -->
<section id="contact" class="py-15 bg-gradient-to-b from-[var(--color-bg-secondary)] to-[var(--color-bg-primary)]">
	<div class="flex flex-col mx-auto w-fit">
		<p class="text-xl text-[var(--color-text-secondary)] text-center mb-6 whitespace-nowrap">
			{t('contact.description')}
		</p>

		<div class="flex flex-col sm:flex-row justify-between gap-6 w-full">
			<a
				href="mailto:info@gobesmart.nl"
				class="group hover:opacity-80 transition-opacity"
			>
				<p class="font-semibold text-[var(--color-text-primary)]">{t('contact.email')}</p>
				<p class="text-[var(--color-text-muted)] group-hover:text-[var(--color-text-secondary)] transition-colors">info@gobesmart.nl</p>
			</a>

			<div>
				<p class="font-semibold text-[var(--color-text-primary)]">{t('contact.location')}</p>
				<p class="text-[var(--color-text-muted)]">{t('contact.locationValue')}</p>
			</div>
		</div>
	</div>
</section>


<!-- Footer -->
<footer class={`bg-[var(--color-bg-dark)] text-[var(--color-text-primary)] py-12 border-t border-[var(--color-primary-dark)]/20 text-center`}>
			<p class={`text-[var(--color-text-muted)] text-sm`}>
				{t('footer.copyright')}
			</p>
</footer>

<!-- Email Form Modal Component -->
<EmailFormModal t={t} />