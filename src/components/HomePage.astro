---
import LanguageSwitcher from './LanguageSwitcher.astro';
import { getLocaleFromUrl, getTranslation } from '../utils/i18n';

const { url } = Astro.props;
const currentLocale = getLocaleFromUrl(url);
const t = getTranslation(currentLocale);
---

<!-- Navigation -->
<nav class="fixed top-0 left-0 right-0 bg-[#042a44]/95 backdrop-blur-sm border-b border-cyan-500/20 z-50">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="flex justify-between items-center py-4">
			<div class="flex items-center">
				<img src="/src/assets/gbs_stamp_dark_no_bg.png" alt="Go be smart stamp" class="h-10" />
				<!-- <div class="text-2xl font-bold bg-gradient-to-r from-[#3be0fa] to-blue-500 bg-clip-text text-transparent">
					Go be smart
				</div> -->
			</div>
			<div class="hidden md:flex space-x-8 items-center">
				<a href="#about" class="text-gray-300 hover:text-cyan-400 transition-colors">{t('nav.about')}</a>
				<a href="#solution" class="text-gray-300 hover:text-cyan-400 transition-colors">{t('nav.solution')}</a>
				<a href="#benefits" class="text-gray-300 hover:text-cyan-400 transition-colors">{t('nav.benefits')}</a>
				<a href="#contact" class="text-gray-300 hover:text-cyan-400 transition-colors">{t('nav.contact')}</a>
				<LanguageSwitcher />
			</div>
			<button class="bg-gradient-to-r from-cyan-400 to-blue-500 text-white px-6 py-2 rounded-lg hover:shadow-lg hover:shadow-cyan-500/20 transition-all">
				{t('nav.getStarted')}
			</button>
		</div>
	</div>
</nav>

<!-- Hero Section -->
<section class="pt-20 pb-16 bg-gradient-to-br from-[#042a44] via-[#053d5f] to-[#042a44]">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="text-center py-20">
			<h1 class="text-5xl md:text-6xl font-bold text-white mb-6">
				{t('hero.title')}
				<span class="bg-gradient-to-r from-blue-400 to-red-400 bg-clip-text text-transparent">
					{t('hero.titleHighlight')}
				</span>
			</h1>
			<p class="text-xl text-gray-300 mb-8 max-w-3xl mx-auto">
				{t('hero.description')}
			</p>
			<div class="flex flex-col sm:flex-row gap-4 justify-center">
				<button class="bg-gradient-to-r from-cyan-400 to-blue-500 text-white px-8 py-4 rounded-lg text-lg font-semibold hover:shadow-xl hover:shadow-cyan-500/30 transition-all transform hover:scale-105">
					{t('hero.requestDemo')}
				</button>
				<button class="border-2 border-cyan-500/50 text-cyan-400 px-8 py-4 rounded-lg text-lg font-semibold hover:border-cyan-400 hover:bg-cyan-500/10 transition-all">
					{t('hero.learnMore')}
				</button>
			</div>
		</div>
	</div>
</section>

<!-- About Section -->
<section id="about" class="py-20 bg-[#042a44]">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="text-center mb-16">
			<h2 class="text-4xl font-bold text-white mb-4">{t('about.title')}</h2>
			<p class="text-xl text-gray-300 max-w-3xl mx-auto">
				{t('about.description')}
			</p>
		</div>
		<div class="grid md:grid-cols-2 gap-12 items-center">
			<div>
				<h3 class="text-2xl font-bold text-cyan-400 mb-4">{t('about.mission')}</h3>
				<p class="text-gray-300 mb-6">
					{t('about.missionText')}
				</p>
				<div class="space-y-4">
					<div class="flex items-center">
						<div class="w-3 h-3 bg-gradient-to-r from-cyan-400 to-blue-500 rounded-full mr-3"></div>
						<span class="text-gray-300">{t('about.features.monitoring')}</span>
					</div>
					<div class="flex items-center">
						<div class="w-3 h-3 bg-gradient-to-r from-cyan-400 to-blue-500 rounded-full mr-3"></div>
						<span class="text-gray-300">{t('about.features.commissioning')}</span>
					</div>
					<div class="flex items-center">
						<div class="w-3 h-3 bg-gradient-to-r from-cyan-400 to-blue-500 rounded-full mr-3"></div>
						<span class="text-gray-300">{t('about.features.support')}</span>
					</div>
				</div>
			</div>
			<div class="bg-gradient-to-br from-blue-900/20 to-cyan-900/20 rounded-2xl p-8 border border-cyan-500/20">
				<div class="h-64 bg-[#053d5f] rounded-lg shadow-lg shadow-cyan-500/10 flex items-center justify-center">
					<div class="text-center text-cyan-400/60">
						<div class="text-4xl mb-2">üìä</div>
						<p>{t('about.dashboardPreview')}<br/>{t('about.comingSoon')}</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<!-- Solution Section -->
<section id="solution" class="py-20 bg-gradient-to-b from-[#042a44] to-[#053d5f]">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="text-center mb-16">
			<h2 class="text-4xl font-bold text-white mb-4">{t('solution.title')}</h2>
			<p class="text-xl text-gray-300 max-w-3xl mx-auto">
				{t('solution.description')}
			</p>
		</div>
		<div class="grid md:grid-cols-3 gap-8">
			<div class="bg-[#053d5f]/50 backdrop-blur-sm rounded-xl p-8 border border-cyan-500/20 hover:border-cyan-400/40 hover:shadow-lg hover:shadow-cyan-500/20 transition-all">
				<div class="w-12 h-12 bg-gradient-to-r from-cyan-500 to-blue-600 rounded-lg flex items-center justify-center mb-6">
					<span class="text-white text-2xl">üîß</span>
				</div>
				<h3 class="text-xl font-bold text-cyan-400 mb-4">{t('solution.smartCommissioning.title')}</h3>
				<p class="text-gray-300">
					{t('solution.smartCommissioning.description')}
				</p>
			</div>
			<div class="bg-[#053d5f]/50 backdrop-blur-sm rounded-xl p-8 border border-cyan-500/20 hover:border-cyan-400/40 hover:shadow-lg hover:shadow-cyan-500/20 transition-all">
				<div class="w-12 h-12 bg-gradient-to-r from-blue-600 to-cyan-500 rounded-lg flex items-center justify-center mb-6">
					<span class="text-white text-2xl">üì±</span>
				</div>
				<h3 class="text-xl font-bold text-cyan-400 mb-4">{t('solution.remoteMonitoring.title')}</h3>
				<p class="text-gray-300">
					{t('solution.remoteMonitoring.description')}
				</p>
			</div>
			<div class="bg-[#053d5f]/50 backdrop-blur-sm rounded-xl p-8 border border-cyan-500/20 hover:border-cyan-400/40 hover:shadow-lg hover:shadow-cyan-500/20 transition-all">
				<div class="w-12 h-12 bg-gradient-to-r from-blue-600 to-red-600 rounded-lg flex items-center justify-center mb-6">
					<span class="text-white text-2xl">‚ö°</span>
				</div>
				<h3 class="text-xl font-bold text-cyan-400 mb-4">{t('solution.rapidSupport.title')}</h3>
				<p class="text-gray-300">
					{t('solution.rapidSupport.description')}
				</p>
			</div>
		</div>
	</div>
</section>

<!-- Benefits Section -->
<section id="benefits" class="py-20 bg-[#042a44]">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="text-center mb-16">
			<h2 class="text-4xl font-bold text-white mb-4">{t('benefits.title')}</h2>
			<p class="text-xl text-gray-300 max-w-3xl mx-auto">
				{t('benefits.description')}
			</p>
		</div>
		<div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
			<div class="text-center">
				<div class="w-16 h-16 bg-gradient-to-r from-cyan-500 to-blue-600 rounded-full flex items-center justify-center mx-auto mb-4 shadow-lg shadow-cyan-500/30">
					<span class="text-white text-2xl font-bold">50%</span>
				</div>
				<h3 class="text-lg font-bold text-cyan-400 mb-2">{t('benefits.stats.commissioning')}</h3>
				<p class="text-gray-400 text-sm">{t('benefits.stats.commissioningDesc')}</p>
			</div>
			<div class="text-center">
				<div class="w-16 h-16 bg-gradient-to-r from-blue-600 to-cyan-500 rounded-full flex items-center justify-center mx-auto mb-4 shadow-lg shadow-blue-500/30">
					<span class="text-white text-2xl font-bold">75%</span>
				</div>
				<h3 class="text-lg font-bold text-cyan-400 mb-2">{t('benefits.stats.serviceCalls')}</h3>
				<p class="text-gray-400 text-sm">{t('benefits.stats.serviceCallsDesc')}</p>
			</div>
			<div class="text-center">
				<div class="w-16 h-16 bg-gradient-to-r from-blue-600 to-red-600 rounded-full flex items-center justify-center mx-auto mb-4 shadow-lg shadow-red-500/30">
					<span class="text-white text-2xl font-bold">90%</span>
				</div>
				<h3 class="text-lg font-bold text-cyan-400 mb-2">{t('benefits.stats.satisfaction')}</h3>
				<p class="text-gray-400 text-sm">{t('benefits.stats.satisfactionDesc')}</p>
			</div>
			<div class="text-center">
				<div class="w-16 h-16 bg-gradient-to-r from-cyan-500 to-blue-500 rounded-full flex items-center justify-center mx-auto mb-4 shadow-lg shadow-cyan-500/30">
					<span class="text-white text-2xl font-bold">24/7</span>
				</div>
				<h3 class="text-lg font-bold text-cyan-400 mb-2">{t('benefits.stats.monitoring')}</h3>
				<p class="text-gray-400 text-sm">{t('benefits.stats.monitoringDesc')}</p>
			</div>
		</div>
	</div>
</section>

<!-- CTA Section -->
<section class="py-20 bg-gradient-to-r from-blue-900 via-[#042a44] to-red-900">
	<div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
		<h2 class="text-4xl font-bold text-white mb-4">{t('cta.title')}</h2>
		<p class="text-xl text-cyan-200 mb-8">
			{t('cta.description')}
		</p>
		<div class="flex flex-col sm:flex-row gap-4 justify-center">
			<button class="bg-gradient-to-r from-cyan-500 to-blue-600 text-white px-8 py-4 rounded-lg text-lg font-semibold hover:shadow-xl hover:shadow-cyan-500/30 transition-all transform hover:scale-105">
				{t('cta.earlyAccess')}
			</button>
			<button class="border-2 border-cyan-400 text-cyan-400 px-8 py-4 rounded-lg text-lg font-semibold hover:bg-cyan-400 hover:text-[#042a44] transition-all">
				{t('cta.scheduleDemo')}
			</button>
		</div>
	</div>
</section>

<!-- Contact Section -->
<section id="contact" class="py-20 bg-gradient-to-b from-[#042a44] to-[#053d5f]">
	<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="text-center mb-12">
			<h2 class="text-4xl font-bold text-white mb-4">{t('contact.title')}</h2>
			<p class="text-xl text-gray-300">
				{t('contact.description')}
			</p>
		</div>
		<div class="grid md:grid-cols-2 gap-12">
			<div>
				<h3 class="text-2xl font-bold text-cyan-400 mb-6">{t('contact.info')}</h3>
				<div class="space-y-4">
					<div class="flex items-center">
						<div class="w-10 h-10 bg-gradient-to-r from-cyan-500 to-blue-600 rounded-lg flex items-center justify-center mr-4">
							<span class="text-white">üìß</span>
						</div>
						<div>
							<p class="font-semibold text-white">{t('contact.email')}</p>
							<p class="text-gray-400">hello@gobesmart.com</p>
						</div>
					</div>
					<div class="flex items-center">
						<div class="w-10 h-10 bg-gradient-to-r from-cyan-500 to-blue-600 rounded-lg flex items-center justify-center mr-4">
							<span class="text-white">üì±</span>
						</div>
						<div>
							<p class="font-semibold text-white">{t('contact.phone')}</p>
							<p class="text-gray-400">+31 (0) 20 123 4567</p>
						</div>
					</div>
					<div class="flex items-center">
						<div class="w-10 h-10 bg-gradient-to-r from-cyan-500 to-blue-600 rounded-lg flex items-center justify-center mr-4">
							<span class="text-white">üìç</span>
						</div>
						<div>
							<p class="font-semibold text-white">{t('contact.location')}</p>
							<p class="text-gray-400">{t('contact.locationValue')}</p>
						</div>
					</div>
				</div>
			</div>
			<div class="bg-[#053d5f]/50 backdrop-blur-sm rounded-xl p-8 border border-cyan-500/20">
				<form class="space-y-6">
					<div>
						<label class="block text-sm font-medium text-cyan-400 mb-2">{t('contact.form.name')}</label>
						<input type="text" class="w-full px-4 py-3 bg-[#042a44] border border-cyan-500/30 rounded-lg text-white placeholder-gray-500 focus:ring-2 focus:ring-cyan-500 focus:border-transparent">
					</div>
					<div>
						<label class="block text-sm font-medium text-cyan-400 mb-2">{t('contact.form.email')}</label>
						<input type="email" class="w-full px-4 py-3 bg-[#042a44] border border-cyan-500/30 rounded-lg text-white placeholder-gray-500 focus:ring-2 focus:ring-cyan-500 focus:border-transparent">
					</div>
					<div>
						<label class="block text-sm font-medium text-cyan-400 mb-2">{t('contact.form.company')}</label>
						<input type="text" class="w-full px-4 py-3 bg-[#042a44] border border-cyan-500/30 rounded-lg text-white placeholder-gray-500 focus:ring-2 focus:ring-cyan-500 focus:border-transparent">
					</div>
					<div>
						<label class="block text-sm font-medium text-cyan-400 mb-2">{t('contact.form.message')}</label>
						<textarea rows="4" class="w-full px-4 py-3 bg-[#042a44] border border-cyan-500/30 rounded-lg text-white placeholder-gray-500 focus:ring-2 focus:ring-cyan-500 focus:border-transparent"></textarea>
					</div>
					<button type="submit" class="w-full bg-gradient-to-r from-cyan-500 to-blue-600 text-white py-3 rounded-lg font-semibold hover:shadow-lg hover:shadow-cyan-500/30 transition-all">
						{t('contact.form.send')}
					</button>
				</form>
			</div>
		</div>
	</div>
</section>

<!-- Footer -->
<footer class="bg-[#021820] text-white py-12 border-t border-cyan-500/20">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="grid md:grid-cols-4 gap-8">
			<div>
				<div class="text-2xl font-bold bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent mb-4">
