---
import Layout from '../../layouts/Layout.astro';
import LanguageSwitcher from '../../components/LanguageSwitcher.astro';
import { getLocaleFromUrl, getTranslation } from '../../utils/i18n';

const currentLocale = getLocaleFromUrl(Astro.url);
const t = getTranslation(currentLocale);
---

<Layout>
	<!-- Navigation -->
	<nav class="fixed top-0 left-0 right-0 bg-white/95 backdrop-blur-sm border-b border-gray-200 z-50">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="flex justify-between items-center py-4">
				<div class="flex items-center">
					<div class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-red-600 bg-clip-text text-transparent">
						Go Be Smart
					</div>
				</div>
				<div class="hidden md:flex space-x-8 items-center">
					<a href="#about" class="text-gray-700 hover:text-blue-600 transition-colors">{t('nav.about')}</a>
					<a href="#solution" class="text-gray-700 hover:text-blue-600 transition-colors">{t('nav.solution')}</a>
					<a href="#benefits" class="text-gray-700 hover:text-blue-600 transition-colors">{t('nav.benefits')}</a>
					<a href="#contact" class="text-gray-700 hover:text-blue-600 transition-colors">{t('nav.contact')}</a>
					<LanguageSwitcher />
				</div>
				<button class="bg-gradient-to-r from-blue-600 to-red-600 text-white px-6 py-2 rounded-lg hover:shadow-lg transition-all">
					{t('nav.getStarted')}
				</button>
			</div>
		</div>
	</nav>

	<!-- Hero Section -->
	<section class="pt-20 pb-16 bg-gradient-to-br from-blue-50 via-white to-red-50">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center py-20">
				<h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6">
					{t('hero.title')}
					<span class="bg-gradient-to-r from-blue-600 to-red-600 bg-clip-text text-transparent">
						{t('hero.titleHighlight')}
					</span>
				</h1>
				<p class="text-xl text-gray-600 mb-8 max-w-3xl mx-auto">
					{t('hero.description')}
				</p>
				<div class="flex flex-col sm:flex-row gap-4 justify-center">
					<button class="bg-gradient-to-r from-blue-600 to-red-600 text-white px-8 py-4 rounded-lg text-lg font-semibold hover:shadow-xl transition-all transform hover:scale-105">
						{t('hero.requestDemo')}
					</button>
					<button class="border-2 border-gray-300 text-gray-700 px-8 py-4 rounded-lg text-lg font-semibold hover:border-blue-600 hover:text-blue-600 transition-all">
						{t('hero.learnMore')}
					</button>
				</div>
			</div>
		</div>
	</section>

	<!-- About Section -->
	<section id="about" class="py-20 bg-white">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center mb-16">
				<h2 class="text-4xl font-bold text-gray-900 mb-4">{t('about.title')}</h2>
				<p class="text-xl text-gray-600 max-w-3xl mx-auto">
					{t('about.description')}
				</p>
			</div>
			<div class="grid md:grid-cols-2 gap-12 items-center">
				<div>
					<h3 class="text-2xl font-bold text-gray-900 mb-4">{t('about.mission')}</h3>
					<p class="text-gray-600 mb-6">
						{t('about.missionText')}
					</p>
					<div class="space-y-4">
						<div class="flex items-center">
							<div class="w-3 h-3 bg-gradient-to-r from-blue-600 to-red-600 rounded-full mr-3"></div>
							<span class="text-gray-700">{t('about.features.monitoring')}</span>
						</div>
						<div class="flex items-center">
							<div class="w-3 h-3 bg-gradient-to-r from-blue-600 to-red-600 rounded-full mr-3"></div>
							<span class="text-gray-700">{t('about.features.commissioning')}</span>
						</div>
						<div class="flex items-center">
							<div class="w-3 h-3 bg-gradient-to-r from-blue-600 to-red-600 rounded-full mr-3"></div>
							<span class="text-gray-700">{t('about.features.support')}</span>
						</div>
					</div>
				</div>
				<div class="bg-gradient-to-br from-blue-100 to-red-100 rounded-2xl p-8">
					<div class="h-64 bg-white rounded-lg shadow-lg flex items-center justify-center">
						<div class="text-center text-gray-400">
							<div class="text-4xl mb-2">üìä</div>
							<p>{t('about.dashboardPreview')}<br/>{t('about.comingSoon')}</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Solution Section -->
	<section id="solution" class="py-20 bg-gray-50">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center mb-16">
				<h2 class="text-4xl font-bold text-gray-900 mb-4">{t('solution.title')}</h2>
				<p class="text-xl text-gray-600 max-w-3xl mx-auto">
					{t('solution.description')}
				</p>
			</div>
			<div class="grid md:grid-cols-3 gap-8">
				<div class="bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-shadow">
					<div class="w-12 h-12 bg-gradient-to-r from-blue-600 to-red-600 rounded-lg flex items-center justify-center mb-6">
						<span class="text-white text-2xl">üîß</span>
					</div>
					<h3 class="text-xl font-bold text-gray-900 mb-4">{t('solution.smartCommissioning.title')}</h3>
					<p class="text-gray-600">
						{t('solution.smartCommissioning.description')}
					</p>
				</div>
				<div class="bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-shadow">
					<div class="w-12 h-12 bg-gradient-to-r from-blue-600 to-red-600 rounded-lg flex items-center justify-center mb-6">
						<span class="text-white text-2xl">üì±</span>
					</div>
					<h3 class="text-xl font-bold text-gray-900 mb-4">{t('solution.remoteMonitoring.title')}</h3>
					<p class="text-gray-600">
						{t('solution.remoteMonitoring.description')}
					</p>
				</div>
				<div class="bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-shadow">
					<div class="w-12 h-12 bg-gradient-to-r from-blue-600 to-red-600 rounded-lg flex items-center justify-center mb-6">
						<span class="text-white text-2xl">‚ö°</span>
					</div>
					<h3 class="text-xl font-bold text-gray-900 mb-4">{t('solution.rapidSupport.title')}</h3>
					<p class="text-gray-600">
						{t('solution.rapidSupport.description')}
					</p>
				</div>
			</div>
		</div>
	</section>

	<!-- Benefits Section -->
	<section id="benefits" class="py-20 bg-white">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center mb-16">
				<h2 class="text-4xl font-bold text-gray-900 mb-4">{t('benefits.title')}</h2>
				<p class="text-xl text-gray-600 max-w-3xl mx-auto">
					{t('benefits.description')}
				</p>
			</div>
			<div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
				<div class="text-center">
					<div class="w-16 h-16 bg-gradient-to-r from-blue-600 to-red-600 rounded-full flex items-center justify-center mx-auto mb-4">
						<span class="text-white text-2xl font-bold">50%</span>
					</div>
					<h3 class="text-lg font-bold text-gray-900 mb-2">{t('benefits.stats.commissioning')}</h3>
					<p class="text-gray-600 text-sm">{t('benefits.stats.commissioningDesc')}</p>
				</div>
				<div class="text-center">
					<div class="w-16 h-16 bg-gradient-to-r from-blue-600 to-red-600 rounded-full flex items-center justify-center mx-auto mb-4">
						<span class="text-white text-2xl font-bold">75%</span>
					</div>
					<h3 class="text-lg font-bold text-gray-900 mb-2">{t('benefits.stats.serviceCalls')}</h3>
					<p class="text-gray-600 text-sm">{t('benefits.stats.serviceCallsDesc')}</p>
				</div>
				<div class="text-center">
					<div class="w-16 h-16 bg-gradient-to-r from-blue-600 to-red-600 rounded-full flex items-center justify-center mx-auto mb-4">
						<span class="text-white text-2xl font-bold">90%</span>
					</div>
					<h3 class="text-lg font-bold text-gray-900 mb-2">{t('benefits.stats.satisfaction')}</h3>
					<p class="text-gray-600 text-sm">{t('benefits.stats.satisfactionDesc')}</p>
				</div>
				<div class="text-center">
					<div class="w-16 h-16 bg-gradient-to-r from-blue-600 to-red-600 rounded-full flex items-center justify-center mx-auto mb-4">
						<span class="text-white text-2xl font-bold">24/7</span>
					</div>
					<h3 class="text-lg font-bold text-gray-900 mb-2">{t('benefits.stats.monitoring')}</h3>
					<p class="text-gray-600 text-sm">{t('benefits.stats.monitoringDesc')}</p>
				</div>
			</div>
		</div>
	</section>

	<!-- CTA Section -->
	<section class="py-20 bg-gradient-to-r from-blue-600 to-red-600">
		<div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
			<h2 class="text-4xl font-bold text-white mb-4">{t('cta.title')}</h2>
			<p class="text-xl text-blue-100 mb-8">
				{t('cta.description')}
			</p>
			<div class="flex flex-col sm:flex-row gap-4 justify-center">
				<button class="bg-white text-blue-600 px-8 py-4 rounded-lg text-lg font-semibold hover:bg-gray-100 transition-all transform hover:scale-105">
					{t('cta.earlyAccess')}
				</button>
				<button class="border-2 border-white text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-white hover:text-blue-600 transition-all">
					{t('cta.scheduleDemo')}
				</button>
			</div>
		</div>
	</section>

	<!-- Contact Section -->
	<section id="contact" class="py-20 bg-gray-50">
		<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center mb-12">
				<h2 class="text-4xl font-bold text-gray-900 mb-4">{t('contact.title')}</h2>
				<p class="text-xl text-gray-600">
					{t('contact.description')}
				</p>
			</div>
			<div class="grid md:grid-cols-2 gap-12">
				<div>
					<h3 class="text-2xl font-bold text-gray-900 mb-6">{t('contact.info')}</h3>
					<div class="space-y-4">
						<div class="flex items-center">
							<div class="w-10 h-10 bg-gradient-to-r from-blue-600 to-red-600 rounded-lg flex items-center justify-center mr-4">
								<span class="text-white">üìß</span>
							</div>
							<div>
								<p class="font-semibold text-gray-900">{t('contact.email')}</p>
								<p class="text-gray-600">hello@gobesmart.com</p>
							</div>
						</div>
						<div class="flex items-center">
							<div class="w-10 h-10 bg-gradient-to-r from-blue-600 to-red-600 rounded-lg flex items-center justify-center mr-4">
								<span class="text-white">üì±</span>
							</div>
							<div>
								<p class="font-semibold text-gray-900">{t('contact.phone')}</p>
								<p class="text-gray-600">+31 (0) 20 123 4567</p>
							</div>
						</div>
						<div class="flex items-center">
							<div class="w-10 h-10 bg-gradient-to-r from-blue-600 to-red-600 rounded-lg flex items-center justify-center mr-4">
								<span class="text-white">üìç</span>
							</div>
							<div>
								<p class="font-semibold text-gray-900">{t('contact.location')}</p>
								<p class="text-gray-600">{t('contact.locationValue')}</p>
							</div>
						</div>
					</div>
				</div>
				<div class="bg-white rounded-xl p-8 shadow-lg">
					<form class="space-y-6">
						<div>
							<label class="block text-sm font-medium text-gray-700 mb-2">{t('contact.form.name')}</label>
							<input type="text" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
						</div>
						<div>
							<label class="block text-sm font-medium text-gray-700 mb-2">{t('contact.form.email')}</label>
							<input type="email" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
						</div>
						<div>
							<label class="block text-sm font-medium text-gray-700 mb-2">{t('contact.form.company')}</label>
							<input type="text" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
						</div>
						<div>
							<label class="block text-sm font-medium text-gray-700 mb-2">{t('contact.form.message')}</label>
							<textarea rows="4" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"></textarea>
						</div>
						<button type="submit" class="w-full bg-gradient-to-r from-blue-600 to-red-600 text-white py-3 rounded-lg font-semibold hover:shadow-lg transition-all">
							{t('contact.form.send')}
						</button>
					</form>
				</div>
			</div>
		</div>
	</section>

	<!-- Footer -->
	<footer class="bg-gray-900 text-white py-12">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="grid md:grid-cols-4 gap-8">
				<div>
					<div class="text-2xl font-bold bg-gradient-to-r from-blue-400 to-red-400 bg-clip-text text-transparent mb-4">
						Go Be Smart
					</div>
					<p class="text-gray-400 text-sm">
						{t('footer.description')}
					</p>
				</div>
				<div>
					<h4 class="font-semibold mb-4">{t('footer.product.title')}</h4>
					<ul class="space-y-2 text-sm text-gray-400">
						<li><a href="#" class="hover:text-white transition-colors">{t('footer.product.dashboard')}</a></li>
						<li><a href="#" class="hover:text-white transition-colors">{t('footer.product.monitoring')}</a></li>
						<li><a href="#" class="hover:text-white transition-colors">{t('footer.product.analytics')}</a></li>
						<li><a href="#" class="hover:text-white transition-colors">{t('footer.product.support')}</a></li>
					</ul>
				</div>
				<div>
					<h4 class="font-semibold mb-4">{t('footer.company.title')}</h4>
					<ul class="space-y-2 text-sm text-gray-400">
						<li><a href="#about" class="hover:text-white transition-colors">{t('footer.company.about')}</a></li>
						<li><a href="#" class="hover:text-white transition-colors">{t('footer.company.careers')}</a></li>
						<li><a href="#" class="hover:text-white transition-colors">{t('footer.company.news')}</a></li>
						<li><a href="#contact" class="hover:text-white transition-colors">{t('footer.company.contact')}</a></li>
					</ul>
				</div>
				<div>
					<h4 class="font-semibold mb-4">{t('footer.legal.title')}</h4>
					<ul class="space-y-2 text-sm text-gray-400">
						<li><a href="#" class="hover:text-white transition-colors">{t('footer.legal.privacy')}</a></li>
						<li><a href="#" class="hover:text-white transition-colors">{t('footer.legal.terms')}</a></li>
						<li><a href="#" class="hover:text-white transition-colors">{t('footer.legal.cookies')}</a></li>
					</ul>
				</div>
			</div>
			<div class="border-t border-gray-800 mt-8 pt-8 text-center">
				<p class="text-gray-400 text-sm">
					{t('footer.copyright')}
				</p>
			</div>
		</div>
	</footer>
</Layout>